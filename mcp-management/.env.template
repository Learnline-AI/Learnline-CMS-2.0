# MCP Server Environment Variables
# Copy this to .env and fill in your actual values

# LLM API Keys
GEMINI_API_KEY=your_gemini_api_key_here           # Get from https://aistudio.google.com/apikey
ANTHROPIC_API_KEY=your_claude_api_key_here        # Get from https://console.anthropic.com/

# Backend Configuration
FASTAPI_BASE_URL=http://localhost:8000             # Your existing FastAPI server
MCP_PORT=8001                                      # MCP server port (separate from FastAPI)

# Default LLM Backend
DEFAULT_LLM_PROVIDER=gemini                        # Options: 'gemini' or 'claude'
